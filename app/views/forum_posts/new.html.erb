 
    
<div class="ui container">
   <h1 class="header">
        <div class="ui large breadcrumb">
          <%=link_to 'Forum', community_path , class: 'section'%>
          <div class="divider"> / </div>
            <%=link_to fcat(params[:forum_category_id]).name, @fcat , class: 'section'%>
          <div class="divider"> / </div>
            New Post
        </div>
    </h1>
    <%= form_for(@forum_post,html: {class: "ui inline form error"}) do |f| %>
    <div class="ui field">
      <div class="ui field">
         <label>Name</label>
          <%= f.text_field :title ,required: true,class: 'ui field', :maxlength => 20, :size => 40 %>
         <label>Description</label>     
         <%= f.text_area :description,required: true ,class: 'ui field', :maxlength => 300%>
      </div>  
        <%= f.hidden_field :forum_category_id, value: params[:forum_category_id]%>
        <%= f.submit 'Post', class: 'ui primary button' %>
    <% end %>
    </div>
</div>
    