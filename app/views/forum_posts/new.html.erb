<div class="ui container">
    <%= form_for(@forum_post,html: {class: "ui inline form error"}) do |f| %>
    <div class="ui field">
      <div class="ui field">
         <label>Name</label>
          <%= f.text_field :title ,required: true,class: 'ui field', :maxlength => 30, :size => 40 %>
         <label>Description</label>     
         <%= f.text_area :description,required: true ,class: 'ui field', :maxlength => 300%>
      </div>  
        <%= f.hidden_field :forum_category_id, value: @fcat%>
        <%= f.submit 'Post', class: 'ui primary button' %>
    <% end %>
    </div>
</div>
    